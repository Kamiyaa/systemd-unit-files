[Unit]
Description=Lightweight DHCP client daemon
Requires=brian-supplicant@%i.service
After=brian-supplicant@%i.service
Wants=network.target brian-supplicant@%i.service
Before=network.target network-online.target

[Service]
Type=forking
ExecStart=/sbin/dhcpcd -j /tmp/dhcpcd.log -b %I
PIDFile=/run/dhcpcd-%I.pid

ExecStopPre=dhcpcd -j /tmp/dhcpcd.log -x %I
ExecStop=ip link set dev %I down

[Install]
WantedBy=multi-user.target
